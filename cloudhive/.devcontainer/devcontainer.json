{
    "$schema": "https://raw.githubusercontent.com/devcontainers/devcontainer-spec/main/src/schema.json",
    "name": "Django devcontainer",
    "dockerComposeFile": [
      "../docker-compose.yml"
    ],
    "service": "cloudhive-app",
    "workspaceFolder": "/usr/src/app",
    "shutdownAction": "stopCompose",
    "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "ms-python.debugpy"
    ],
    "settings": {
      "python.pythonPath": "/opt/venv/bin/python"
    }
  }